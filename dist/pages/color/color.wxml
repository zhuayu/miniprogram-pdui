<view class="page">
    <view class="page__hd">
        <view class="page__logo">
            <image src="/images/pd_logo_97.png" style="width:100rpx;height:100rpx;"></image>
        </view>
        <view class="page__title page__title_line mb-60">产品色彩运用规则</view>
    </view>
    <view class="page__bd">
        <view class="color-list">
            <block wx:for="{{list}}" wx:key="id">
                <view class="color-item">
                    <view class="color-item_colorbg" style="background-color:{{item.color}};"></view>
                    <view class="color-item_name">{{item.name}}</view>
                    <view class="color-item_title">{{item.title}}</view>
                    <view class="color-item_desc">{{item.desc}}</view>
                </view>
            </block>
        </view>
    </view>
</view>